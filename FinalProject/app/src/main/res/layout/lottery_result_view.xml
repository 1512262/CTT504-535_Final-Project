<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="0dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:src= "@drawable/noimage"
                    android:id="@+id/iv_lottery_image_result"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tên công ty Xổ số Kiến Thiết"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_my_result_lottery_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginBottom="2dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Ngày phát hành:"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_my_result_lottery_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#000000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Mã số vé:"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_my_result_lottery_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:layout_marginBottom="2dp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_my_result_lottery_prize"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="45dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="end|bottom"
            app:srcCompat="@drawable/ic_delete_black_24dp" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_lookup_in_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFC305"
            app:borderWidth="0dp"
            android:clickable="true"
            android:layout_gravity="left|bottom"
            app:srcCompat="@drawable/ic_search_black_24dp" />



        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/fab_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:menu_colorNormal="#6200ee"
            fab:menu_colorPressed="#3700b3"
            fab:menu_colorRipple="#FFFFFF"
            fab:menu_labels_position="left"
            android:layout_gravity="end|bottom"
            fab:menu_labels_colorNormal="#333333"
            fab:menu_labels_colorPressed="#444444"
            fab:menu_labels_colorRipple="#66FFFFFF"

            fab:menu_icon="@drawable/ic_more_vert_black_24dp">

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fab_new_checking"
                android:clickable="true"
                fab:fab_colorNormal="#FF4081"
                fab:fab_colorPressed="#FF4090"
                fab:fab_colorRipple="#FFFFFF"
                fab:fab_label="Kiểm tra mới"
                android:src="@drawable/ic_add_black_24dp" />

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fab_lookup"
                android:clickable="true"
                fab:fab_colorNormal="#FFC305"
                fab:fab_colorPressed="#FFC30F"
                fab:fab_colorRipple="#FFFFFF"
                fab:fab_label="Tra cứu thêm"
                android:src="@drawable/ic_search_black_24dp" />

        </com.github.clans.fab.FloatingActionMenu>

    </android.support.v7.widget.CardView>



</LinearLayout>